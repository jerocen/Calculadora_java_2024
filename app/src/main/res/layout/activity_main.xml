<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/calculator_body"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="120dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="30dp"
        app:layout_constraintGuide_percent="0.3"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="30dp"
        app:layout_constraintGuide_percent="0.45"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="30dp"
        app:layout_constraintGuide_percent="0.60"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="550dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="30dp"
        app:layout_constraintGuide_percent="0.25"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="30dp"
        app:layout_constraintGuide_percent="0.5"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="30dp"
        app:layout_constraintGuide_percent="0.75"
        />

    <EditText
        android:id="@+id/operations_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="60dp"
        android:padding="10dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line1"
        android:background="@color/white"
        />

    <Button
        android:id="@+id/ctrlC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/boton"
        android:text="C"
        android:textSize="45dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintEnd_toStartOf="@id/line7"
        app:layout_constraintBottom_toTopOf="@id/line2"
        />

    <Button
        android:id="@+id/ctrlErase"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/boton"
        android:text="Borrar"
        android:textSize="10dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@id/line7"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintEnd_toStartOf="@id/line8"
        app:layout_constraintBottom_toTopOf="@id/line2"
        />

    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/boton"
        android:text="7"
        android:textSize="45dp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/line6"
        app:layout_constraintBottom_toTopOf="@id/line3"
        />

    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/boton"
        android:text="8"
        android:textSize="45dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@id/line6"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintEnd_toStartOf="@id/line7"
        app:layout_constraintBottom_toTopOf="@id/line3"
        />

    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/boton"
        android:text="9"
        android:textSize="45dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@id/line7"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintEnd_toStartOf="@id/line8"
        app:layout_constraintBottom_toTopOf="@id/line3"
        />

    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/boton"
        android:text="4"
        android:textSize="45dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line3"
        app:layout_constraintEnd_toStartOf="@id/line6"
        app:layout_constraintBottom_toTopOf="@id/line4"
        />

    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/boton"
        android:text="5"
        android:textSize="45dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@id/line6"
        app:layout_constraintTop_toBottomOf="@id/line3"
        app:layout_constraintEnd_toStartOf="@id/line7"
        app:layout_constraintBottom_toTopOf="@id/line4"
        />

    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/boton"
        android:text="6"
        android:textSize="45dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@id/line7"
        app:layout_constraintTop_toBottomOf="@id/line3"
        app:layout_constraintEnd_toStartOf="@id/line8"
        app:layout_constraintBottom_toTopOf="@id/line4"
        />

    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/boton"
        android:text="1"
        android:textSize="45dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line4"
        app:layout_constraintEnd_toStartOf="@id/line6"
        app:layout_constraintBottom_toTopOf="@id/line5"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/boton"
        android:text="2"
        android:textSize="45dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@id/line6"
        app:layout_constraintTop_toBottomOf="@id/line4"
        app:layout_constraintEnd_toStartOf="@id/line7"
        app:layout_constraintBottom_toTopOf="@id/line5"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/boton"
        android:text="3"
        android:textSize="45dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@id/line7"
        app:layout_constraintTop_toBottomOf="@id/line4"
        app:layout_constraintEnd_toStartOf="@id/line8"
        app:layout_constraintBottom_toTopOf="@id/line5"
        />

    <Button
        android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/boton"
        android:text="0"
        android:textSize="45dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line5"
        app:layout_constraintEnd_toStartOf="@id/line7"
        app:layout_constraintBottom_toTopOf="@id/line9"
        />

    <Button
        android:id="@+id/btnPoint"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/boton"
        android:text="."
        android:textSize="45dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@id/line7"
        app:layout_constraintTop_toBottomOf="@id/line5"
        app:layout_constraintEnd_toStartOf="@id/line8"
        app:layout_constraintBottom_toTopOf="@id/line9"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="30dp"
        app:layout_constraintGuide_percent="0.90"
        />

    <Button
        android:id="@+id/btnSum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/boton"
        android:text="+"
        android:textSize="45dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@id/line8"
        app:layout_constraintTop_toBottomOf="@id/line4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line5"
        />

    <Button
        android:id="@+id/btnRes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/boton"
        android:text="-"
        android:textSize="45dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@id/line8"
        app:layout_constraintTop_toBottomOf="@id/line3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line4"
        />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/boton"
        android:text="x"
        android:textSize="45dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@id/line8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintBottom_toTopOf="@id/line3"
        />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/boton"
        android:text="/"
        android:textSize="45dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@id/line8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintBottom_toTopOf="@id/line2"
        />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/boton"
        android:text="="
        android:textSize="45dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@id/line8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line5"
        app:layout_constraintBottom_toTopOf="@id/line9"
        />

</androidx.constraintlayout.widget.ConstraintLayout>